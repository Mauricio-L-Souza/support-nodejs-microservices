{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "lib": [
            "es6"
        ],
        "allowJs": true,
        "outDir": "build",
        "rootDir": ".",
        "strict": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "typeRoots": [
            "core/types",
            "./node_modules/@types"
        ]
    },
    "include": [
        "core/types/express/index.d.ts",
        "**/*.ts",
        "**/*.tsx"
    ]
}